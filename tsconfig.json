{
  "compilerOptions": {
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "tests/**/*.ts"],

  "ts-node": {
    "esm": true
  }
}
